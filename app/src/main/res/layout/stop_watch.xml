<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:layout_margin="20dp"
              android:layout_height="match_parent">

    <TextView
            android:text="40"
            android:textSize="110dp"
            android:id="@+id/timeSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_above="@id/scrollLAB"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="00"
            android:textSize="30dp"
            android:id="@+id/timeMilliSec"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/timeSec"
            android:layout_alignBaseline="@id/timeSec"/>
    <ScrollView
            android:id="@+id/scrollLAB"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/lab2"
                    android:textSize="18dp"
                    android:text="LAB2 : 3.20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/lab1"
                    android:text="LAB1 : 1.20"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>